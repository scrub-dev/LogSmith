<Window x:Class="logsmith.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" 
        Height="600" Width="920"
        WindowStyle="None"
        Background="Transparent"
        AllowsTransparency="True"
        ResizeMode="CanMinimize"
        xmlns:vm="clr-namespace:logsmith.ViewModels">
    <Window.DataContext>
        <vm:MainWindowViewModel/>
    </Window.DataContext>
    <Border Background="{StaticResource background-light}" CornerRadius="15">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="35"/>
                <RowDefinition Height="8*"/>
                <RowDefinition Height="1*"/>
            </Grid.RowDefinitions>
            <DockPanel Grid.Row="1">
                <ContentControl Content="{Binding CurrentView}" Panel.ZIndex="1"/>
            </DockPanel>
            <Border Grid.Row="0"
                    Grid.Column="0" 
                    Grid.ColumnSpan="2" 
                    CornerRadius="15,15,0,0" 
                    Background="{StaticResource background-dark}"
                    BorderThickness="0 0 0 2"
                    BorderBrush="{StaticResource main}"
                    >
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition/>
                    </Grid.ColumnDefinitions>
                    <TextBlock Grid.Column="0"
                             Padding="5,0,0,0"
                             HorizontalAlignment="Left"
                             VerticalAlignment="Center"
                             Foreground="White" 
                             FontFamily="/Fonts/#Poppins" 
                             FontWeight="Light" 
                             FontSize="20" 
                             Text=" LogSmith " 
                             Height="23" Width="100"/>
                    <StackPanel Orientation="Horizontal" Grid.Column="2" FlowDirection="RightToLeft">
                        <StackPanel.Resources>
                            <Style TargetType="{x:Type Button}">
                                <Setter Property="Margin" Value="5"/>
                            </Style>
                        </StackPanel.Resources>
                        <Button Width="30" Style="{StaticResource ButtonClose}"  Command="{Binding CloseApplicationCommand}">
                            <Button.Resources>
                                <Style TargetType="{x:Type Border}">
                                    <Setter Property="CornerRadius" Value="10"/>
                                    <Setter Property="Background" Value="Transparent"/>
                                </Style>
                            </Button.Resources>
                            <Button.Content>
                                <Image Width="20" Height="20" Source="/Images/cross.png"/>
                            </Button.Content>
                        </Button>
                        <Button Width="30" Style="{StaticResource ButtonMinimise}"  Click="BtnMinimise_Click">
                            <Button.Resources>
                                <Style TargetType="{x:Type Border}">
                                    <Setter Property="CornerRadius" Value="10"/>
                                </Style>
                            </Button.Resources>
                            <Button.Content>
                                <Image Width="20" Height="20" Source="/Images/minimise.png"/>
                            </Button.Content>
                        </Button>
                    </StackPanel>
                </Grid>
            </Border>
            <Border CornerRadius="0,0,15,15" 
                    Background="{StaticResource background}" 
                    Grid.Row="2" 
                    Grid.ColumnSpan="2"
                    BorderThickness="0 2 0 0"
                    BorderBrush="{StaticResource main}"
                    >
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition/>
                        <ColumnDefinition/>
                        <ColumnDefinition/>
                    </Grid.ColumnDefinitions>
                    <Grid Grid.Column="2">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition/>
                            <ColumnDefinition/>
                        </Grid.ColumnDefinitions>
                    </Grid>
                    <Border Grid.Column="1">
                        <Border  Margin="0,10,0,10" CornerRadius="10" Background="{StaticResource background-light}">
                            <Label VerticalAlignment="Center" HorizontalAlignment="Center" FontSize="18" Foreground="White" Padding="5,0,0,0" FontFamily="Cascadia Code" FontWeight="Light" Content="{Binding CurrentState}"/>
                        </Border>
                    </Border>

                </Grid>
            </Border>
        </Grid>
    </Border>
</Window>
