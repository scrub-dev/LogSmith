<Window x:Class="logsmith.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" 
        Height="600" Width="920"
        WindowStyle="None"
        Background="Transparent"
        AllowsTransparency="True"
        ResizeMode="CanMinimize"
        xmlns:vm="clr-namespace:logsmith.ViewModels">
    <Window.DataContext>
        <vm:MainWindowViewModel/>
    </Window.DataContext>
    <Border Background="{StaticResource background-light}" CornerRadius="15">
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2*"/>
                <ColumnDefinition Width="8*"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="35"/>
                <RowDefinition Height="8*"/>
                <RowDefinition Height="1*"/>
            </Grid.RowDefinitions>
            <Border Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="2" CornerRadius="15,15,0,0" Background="{StaticResource background-dark}">
                <StackPanel Orientation="Horizontal" Grid.Column="2" FlowDirection="RightToLeft">
                    <StackPanel.Resources>
                        <Style TargetType="{x:Type Button}">
                            <Setter Property="Margin" Value="5"/>
                        </Style>
                    </StackPanel.Resources>
                    <Button Width="30" Style="{StaticResource ButtonClose}"  Command="{Binding CloseApplicationCommand}">
                        <Button.Resources>
                            <Style TargetType="{x:Type Border}">
                                <Setter Property="CornerRadius" Value="10"/>
                                <Setter Property="Background" Value="Transparent"/>
                            </Style>
                        </Button.Resources>
                        <Button.Content>
                            <Image Width="20" Height="20" Source="/Images/cross.png"/>
                        </Button.Content>
                    </Button>
                    <Button Width="30" Style="{StaticResource ButtonMinimise}"  Click="BtnMinimise_Click">
                        <Button.Resources>
                            <Style TargetType="{x:Type Border}">
                                <Setter Property="CornerRadius" Value="10"/>
                            </Style>
                        </Button.Resources>
                        <Button.Content>
                            <Image Width="20" Height="20" Source="/Images/minimise.png"/>
                        </Button.Content>
                    </Button>
                </StackPanel>
            </Border>
            <Border Grid.Column="0" Grid.Row="1" Grid.RowSpan="2" Background="{StaticResource background}" Panel.ZIndex="-1000" CornerRadius="0,0,0,15">
                <TextBlock Grid.Column="0" 
                               HorizontalAlignment="Center" 
                               Foreground="White" 
                               FontFamily="/Fonts/#Poppins" 
                               FontWeight="Light" 
                               FontSize="36" 
                               Margin="10" 
                               Text=" LogSmith " 
                               VerticalAlignment="Top">
                    <TextBlock.TextDecorations>
                        <TextDecoration Location="Underline" PenOffset="3">
                            <TextDecoration.Pen>
                                <Pen Brush="{StaticResource main}" Thickness="1"/>
                            </TextDecoration.Pen>
                        </TextDecoration>
                    </TextBlock.TextDecorations>
                </TextBlock>
            </Border>
            <Border CornerRadius="0,0,15,15" Background="{StaticResource background}" Grid.Row="2" Grid.ColumnSpan="2">

            </Border>
        </Grid>
    </Border>
</Window>
